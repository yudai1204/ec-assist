{
  "update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "EC Assist",
  "version": "1.7.9",
  "description": "ECサイトをカスタム",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "iconPopup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/jquery.js",
        "libs/jszip.js",
        "libs/encoding.min.js",
        "auctown.js",
        "mercari.js",
        "amazon.js",
        "dseller.js",
        "autohyoka.js",
        "yahooAucStore.js"
      ]
    }
  ],
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["files/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options/option.html"
}
